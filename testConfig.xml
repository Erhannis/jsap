<?xml version="1.0" encoding="UTF-8"?>
<JSAP>
  <Switch id="verbose" shortFlag="v" longFlag="verbose">
    <Help lang="en">Verbose output</Help>
    <Help lang="de">Ausf√ºhrliche Ausgabe</Help>
  </Switch>
  <FlaggedOption id="num" required="true" shortFlag="n">
    <UsageName lang="en">number</UsageName>
    <UsageName lang="de">Zahl</UsageName>
    <Default>5</Default>
    <Help lang="en">An integer value</Help>
    <Help lang="de">Ein Integer Wert</Help>
    <StringParser classname="com.martiansoftware.jsap.stringparsers.IntegerStringParser"/>
  </FlaggedOption>
  <FlaggedOption id="date" shortFlag="d" longFlag="date">
    <Default>12/25/2002</Default>
    <StringParser classname="com.martiansoftware.jsap.stringparsers.DateStringParser">
      <Property name="format" value="MM/DD/yyyy"/>
    </StringParser>
    <UsageName lang="en">date</UsageName>
    <UsageName lang="de">Datum</UsageName>
    <Help lang="en">Some date</Help>
    <Help lang="de">Irgend ein Datum</Help>
  </FlaggedOption>
  <QualifiedSwitch id="value" shortFlag="s" longFlag="switch" list="true" listSeparator=",">
    <UsageName lang="en">value</UsageName>
    <UsageName lang="de">Wert</UsageName>
    <Help lang="en">Some value</Help>
    <Help lang="de">Irgend ein Wert</Help>
  </QualifiedSwitch>
  <UnflaggedOption id="files" greedy="true">
    <UsageName lang="en">file</UsageName>
    <UsageName lang="de">Datei</UsageName>
    <Help lang="en">Files to be processed</Help>
    <Help lang="de">Zu behandelnde Dateien</Help>
  </UnflaggedOption>
</JSAP>
