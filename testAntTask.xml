<project basedir="." default="test" name="testAntTask">

	<property name="build" value="build"/>
	
	<taskdef name="jsap" classname="com.martiansoftware.jsap.ant.JSAPAntTask" classpath="${build}"/>
	
	
	<target name="test">
	
		<jsap srcdir="${build}" classname="com.martiansoftware.jsap.examples.MyJSAP">
			<flaggedoption id="verbose" longflag="verbose" stringparser="IntegerStringParser">
			
				<default>default value 1</default>
			</flaggedoption>
			<flaggedoption id="testoption2" shortflag="t"/>
			<unflaggedoption id="testoption3" required="true"/>
			<switch id="myswitch" shortflag="v"/>
		</jsap>
	
	</target>

</project>